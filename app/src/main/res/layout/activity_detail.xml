<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aircheckersolutions.airchecker.aircheckerv4.DetailActivity">
    <RelativeLayout
        android:id="@+id/rl_main_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">
        <ListView
            android:id="@+id/lv_pollutants"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"></ListView>
        <ListView
            android:id="@+id/lv_pollen"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@id/lv_pollutants"
            android:layout_marginTop="10dp"></ListView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lv_pollen"
            android:src="@drawable/swipelessdetails"/>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
